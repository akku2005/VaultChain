{
  "name": "defi-management-platform-server",
  "version": "1.0.0",
  "description": "Advanced Decentralized Finance Management Platform Backend",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "coverage": "jest --coverage",
    "migrate": "node ./database/migrations/run-migrations.js",
    "seed": "node ./database/seeds/seed-database.js",
    "docker:build": "docker build -t defi-backend .",
    "docker:run": "docker run -p 3000:3000 defi-backend",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "defi",
    "blockchain",
    "cryptocurrency",
    "web3",
    "fintech",
    "portfolio-management",
    "investment-tracking"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/defi-management-platform"
  },
  "homepage": "https://github.com/yourusername/defi-management-platform#readme",
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "web3": "^1.10.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.3.3",
    "supertest": "^6.3.3"
  },
  "config": {
    "supported_blockchains": [
      "ethereum",
      "binance-smart-chain",
      "polygon",
      "solana"
    ],
    "supported_exchanges": [
      "coinbase",
      "binance",
      "kraken",
      "kucoin"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "docs/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
