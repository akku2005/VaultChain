{
  "name": "vault-chain",
  "version": "1.0.0",
  "description": "Advanced Decentralized Finance Management Platform Backend",
  "main": "server.js",
  "private": true,
  "engines": {
    "node": ">=16.20.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production nodemon server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "debug": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "prepare": "husky install",
    "db:migrate": "node ./database/migrations/run-migrations.js",
    "db:seed": "node ./database/seeds/seed-database.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t defi-backend .",
    "docker:run": "docker run -p 3000:3000 defi-backend",
    "docker:dev": "docker-compose up --build",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "defi",
    "blockchain",
    "cryptocurrency",
    "web3",
    "fintech",
    "portfolio-management",
    "investment-tracking"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://yourwebsite.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/akku2005/VaultChain.git"
  },
  "homepage": "https://github.com/akku2005/VaultChain#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "colorette": "^2.0.20",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.2.0",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.4",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "web3": "^4.3.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.7",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0"
  },
  "config": {
    "supported_blockchains": [
      "ethereum",
      "binance-smart-chain",
      "polygon",
      "solana"
    ],
    "supported_exchanges": [
      "coinbase",
      "binance",
      "kraken",
      "kucoin"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/config/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "docs/",
      "*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run lint"
    }
  },
  "overrides": {
    "web3": {
      "bn.js": "^5.2.1"
    }
  }
}
